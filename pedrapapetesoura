import random
print("PEDRA, PAPEL E TESOURA")
a = int(input('Considere:\n0 = PEDRA\n1 = PAPEL\n2 = TESOURA\nDigite o numero correspondente a opção que voce deseja PEDRA, PAPEL OU TESOURA: '))
b = random.randint(0,2)
print(f'COMPUTADOR: {b}')
if a == b:
    print("EMPATE")
elif (a == 1 and b == 2) or (a == 2 and b == 3) or (a == 3 and b == 1):
    print("VOCÊ PERDEU")
else:
    print("VOCÊ GANHOU")
